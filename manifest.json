{
  "manifest_version": 2,
  "name": "Whatsapp Spammer",
  "version": "1.1",
  "description": "A simple Chrome Extension to spam messages.",
  "permissions": ["tabs"],
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["https://web.whatsapp.com/*"]
    }
  ],
  "browser_action": {
    "default_popup": "./public/index.html"
  }
}
